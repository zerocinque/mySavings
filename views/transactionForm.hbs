<div>
    <h2>{{title}}</h2>
</div>

<form method="post" action="#">
    <div class="form-group">
        <label for="date">Date</label>
        <input type="date" class="form-control" id="date" name="date" value="{{transaction.nDate}}">
    </div>

    <div class="form-group">
        <label for="amount">Amount</label>
        <input type="number" class="form-control" id="amount" name="amount" value="{{transaction.amount}}">
    </div>

    <div class="form-group">
        <label for="description">Desctription</label>
        <input type="text" class="form-control" id="description" name="description" value="{{transaction.description}}">
    </div>

    <div class="form-group">
        <label for="category">Category</label>
        <input type="text" class="form-control" id="category" name="category" value="{{transaction.category}}">
    </div>

    <div class="form-group">
        <label for="next">Next</label>
        <input type="date" class="form-control" id="next" name="next" value="{{transaction.nNext}}">
    </div>

    <button type="submit" class="btn btn-success">{{action}}</button>
    <a href="/transactions" class="btn btn-default">Cancel</a>
</form>