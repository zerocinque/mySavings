<div>
    <h2 class="float-md-left">{{title}}</h2>
    <div class="float-md-right">
        <a href="/transactions/add" class="btn btn-success">Add</a>
    </div>
</div>

<div>
    <table class="table">
        <tr>
            <th scope="col">Date</th>
            <th scope="col">Amount</th>
            <th scope="col">Description</th>
            <th scope="col">Category</th>
            <th scope="col">Next</th>
            <th scope="colgroup">Functions</th>
        </tr>
        {{#each transactions}}
            <tr>
                <td>{{viewDate}}</td>
                <td>{{amount}}</td>
                <td>{{description}}</td>
                <td>{{category}}</td>
                <td>{{viewNext}}</td>
                <td>
                    <a href="/transactions/edit/{{_id}}"><i class="far fa-edit"></i></a>
                </td>
            </tr>
        {{/each}}
    </table>
</div>
